{
    "manifest_version": 2,
    "name": "TLV Night Mode",
    "version": "1.0.2",

    "description": "Convert all websites to dark color scheme.",
    "icons": {
        "48": "icons/tlv_48.png",
        "128": "icons/tlv.png"
    },

    "browser_action": {
        "default_icon": "icons/tlv_48.png",
        "default_title": "TLV Night Mode",
        "default_popup": "popup/popup.html"
      },

    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "<all_urls>"
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "run_at": "document_start",
            "js": ["init.js"],
            "css": ["default.css"],
            "all_frames": true
        },
        {
            "matches": ["<all_urls>"],
            "run_at": "document_end",
            "js": ["changeColor.js"],
            "all_frames": true
        }
    ]
}
