{
    "manifest_version": 2,
    "name": "TLV Night Mode",
    "version": "1.0",

    "description": "Display the web page in your favourite color.",
    "icons": {
        "48": "icons/coloring48.png",
        "128": "icons/coloring.png"
    },

    "browser_action": {
        "default_icon": "icons/coloring48.png",
        "default_title": "Coloring",
        "default_popup": "popup/popup.html"
      },

    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "<all_urls>",
        "management"
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "run_at": "document_start",
            "js": ["init.js"],
            "css": ["default.css"],
            "all_frames": true
        },
        {
            "matches": ["<all_urls>"],
            "run_at": "document_end",
            "js": ["changeColor.js"],
            "all_frames": true
        },
        {
            "matches": ["<all_urls>"],
            "js": ["recover.js"],
            "all_frames": true
        }
    ]
}
